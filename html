<body>
    <div class="container">
        <h1>Convertidor de Decimal a Fracción</h1>
        <input type="number" id="decimal" placeholder="Introduce un número decimal" step="any">
        <button onclick="convertirDecimalAFraction()">Convertir</button>
        <div class="result" id="resultado"></div>
        <div class="footer">Api Desarrollada por <a href="https://norbelto.com" target="_blank">Norbelto.com</a></div>
    </div>

    <script>
        function convertirDecimalAFraction() {
            const decimal = parseFloat(document.getElementById('decimal').value);

            if (isNaN(decimal)) {
                document.getElementById('resultado').innerText = 'Por favor, introduce un número válido.';
                return;
            }

            let numerador = decimal;
            let denominador = 1;

            while (!Number.isInteger(numerador)) {
                numerador *= 10;
                denominador *= 10;
            }

            const gcd = (a, b) => (b === 0 ? a : gcd(b, a % b));
            const divisor = gcd(numerador, denominador);

            numerador /= divisor;
            denominador /= divisor;

            document.getElementById('resultado').innerText = `La fracción es: ${numerador}/${denominador}`;
        }
    </script>
